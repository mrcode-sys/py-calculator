<CalcButton@Button>:
    font_size: 18
<Calculadora>:
    orientation:"vertical"
    padding: 15
    spacing: 15
        
    Label:
        text: root.display
        color: root.rstd_c
        font_size:40
        bold: True
        padding: [20, 10]
        halign: "right"
        valign: "middle"
        text_size: self.size

        shorten: True
        shorten_from: "left"

        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.2
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [20]
    GridLayout:
        cols: 4
        spacing: 10
        size_hint_y: 3

        CalcButton:
            text: "7"
            on_press: root.form(7)

        CalcButton:
            text: "8"
            on_press: root.form(8)

        CalcButton:
            text: "9"
            on_press: root.form(9)

        CalcButton:
            text: "+"
            on_press: root.form("+")

        CalcButton:
            text: "4"
            on_press: root.form(4)

        CalcButton:
            text: "5"
            on_press: root.form(5)

        CalcButton:
            text: "6"
            on_press: root.form(6)

        CalcButton:
            text: "-"
            on_press: root.form("-")

        CalcButton:
            text: "1"
            on_press: root.form(1)

        CalcButton:
            text: "2"
            on_press: root.form(2)

        CalcButton:
            text: "3"
            on_press: root.form(3)

        CalcButton:
            text: "x"
            on_press: root.form("x")

        CalcButton:
            text: "0"
            on_press: root.form(0)

        CalcButton:
            text: "C"
            on_press: root.lmp()

        CalcButton:
            text: "="
            on_press: root.form("=")

        CalcButton:
            text: "/"
            on_press: root.form("/")